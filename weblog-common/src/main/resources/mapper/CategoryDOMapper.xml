<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.czltnb.weblog.common.domain.mapper.CategoryDOMapper">
    <resultMap id="BaseResultMap" type="com.czltnb.weblog.common.domain.dos.CategoryDO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="is_deleted" jdbcType="TINYINT" property="isDeleted"/>
    </resultMap>
    <select id="selectByName" resultMap="BaseResultMap">
        select id,name,create_time,update_time
        from t_category
        WHERE is_deleted = 0 AND name = #{name}
    </select>
    <select id="selectById" resultMap="BaseResultMap">
        select id,name,create_time,update_time
        from t_category
        WHERE is_deleted = 0 AND id = #{id}
    </select>
    <insert id="insertCategory" parameterType="com.czltnb.weblog.common.domain.dos.CategoryDO">
        insert into t_category
        (name)
        VALUES
        (#{name})
    </insert>
    <select id="selectCountByCategoryName" resultType="int">
        select count(*)
        from t_category
        where is_deleted = 0 AND name like concat ('%',#{name},'%')
    </select>
    <select id="selectPageListByCategoryName" resultMap="BaseResultMap">
        select id,name,create_time,update_time
        from t_category
        where is_deleted = 0 AND name like concat ('%',#{name},'%')
        limit #{offset},#{pageSize}
    </select>
    <update id="deleteCategoryById" parameterType="long">
        update t_category
        set is_deleted = 1
        WHERE is_deleted = 0 AND id = #{id}
    </update>

</mapper>
